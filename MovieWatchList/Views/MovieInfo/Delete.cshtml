@model MovieWatchList.Models.MovieInfo

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<form method="post" asp-action="Delete">
    <div>
        <fieldset disabled>
            <div class="col-8">
                <input type="hidden" asp-for="MovieId" />
                <div class="form-group row">
                    <div class=" col-4">
                        <label asp-for="Name" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class=" col-4">
                        <label asp-for="Year" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Year" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class=" col-4">
                        <label asp-for="Genre" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Genre" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class=" col-4">
                        <label asp-for="Description" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        @Html.TextAreaFor(m => m.Description)
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_DeleteAndBackToListButton" model="Model.MovieId" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}