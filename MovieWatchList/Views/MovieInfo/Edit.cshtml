@model MovieWatchList.Models.MovieInfo
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" asp-action="Create">
    <div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class=" col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class=" col-2">
                <label asp-for="Year" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Year" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class=" col-2">
                <label asp-for="Genre" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Genre" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class=" col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-5">
                @Html.TextAreaFor(m => m.Description)
            </div>

        </div>

        <div class="col-5 offset-2">
            <partial name="_EditAndBackToListButton" model="Model.MovieId"/>
        </div>
    </div>
</form>